<launch>
  <!-- 海龟仿真器 -->
  <node
    pkg="turtlesim"
    type="turtlesim_node"
    name="sim"
    required="true"
  />
  
  <!-- 键盘控制 -->
  <node
    pkg="turtlesim"
    type="turtle_teleop_key"
    name="teleop"
    required="true"
    output="screen"
  />

  <!-- TF广播 -->
  <node
    pkg="learning_tf"
    type="tf_broadcaster"
    name="mybroadcaster"
    required="true"
    args="/turtle1"
  />
</launch>
