<robot name="arm_body" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find learning_description)/urdf/arm_body.urdf.xacro"/>

  <!-- barrett hand -->
  <xacro:include filename="$(find barrett_hand_description)/urdf/bh282.urdf.xacro" />

  <xacro:macro name="arm_hand">

    <arm_body/>

    <!-- end effector -->
    <xacro:bhand_macro parent="wrist_link" name="bh">
      <origin xyz="0.0 0.0 0.0" rpy="0 0 ${pi/2.0}"/>
    </xacro:bhand_macro>
  </xacro:macro>

</robot>
