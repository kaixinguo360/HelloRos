<robot name="arm_body" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- property -->
  <xacro:property name="pi" value="3.14159265"/>
  <xacro:property name="gap" value="0.0"/>

  <xacro:property name="base_radius" value="0.05"/>
  <xacro:property name="base_height" value="0.1"/>
  <xacro:property name="base_mass" value="10"/>

  <xacro:property name="motor_radius" value="0.05"/>
  <xacro:property name="motor_height" value="0.1"/>
  <xacro:property name="motor_mass" value="10"/>
  <xacro:property name="motor_effort" value="150.0"/>
  <xacro:property name="motor_vel" value="${pi}"/>

  <xacro:property name="pole_radius" value="0.05"/>
  <xacro:property name="pole_length" value="0.5"/>
  <xacro:property name="pole_mass" value="50"/>

  <xacro:property name="standoff_x" value="0"/>
  <xacro:property name="standoff_y" value="0"/>
  <xacro:property name="standoff_z" value="0"/>

  <!-- plugin -->
  <xacro:macro name="plugin_ros_control">
    <gazebo>
      <plugin filename="libgazebo_ros_control.so" name="ros_control">
        <robotNamespace>/</robotNamespace>
        <legacyModeNS>true</legacyModeNS>
      </plugin>
    </gazebo>
  </xacro:macro>

  <!-- inertial -->
  <xacro:macro name="cylinder_inertial" params="radius length mass">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass}" />
      <inertia ixx="${0.0833333 * mass * (3 * radius * radius + length * length)}" ixy="0.0" ixz="0.0"
               iyy="${0.0833333 * mass * (3 * radius * radius + length * length)}" iyz="0.0"
               izz="${0.5 * mass * radius * radius}" />
    </inertial>
  </xacro:macro>

  <!-- joint -->
  <xacro:macro name="continuous" params="name parent child xyz rpy axis">
    <joint name="${name}" type="continuous">
      <parent link="${parent}"/>
      <child link="${child}"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
      <axis xyz="${axis}"/>
      <limit effort="${motor_effort}" velocity="${motor_vel}"/>
      <dynamics damping="0.0" friction="0.0"/>
    </joint>
    <transmission name="${name}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${name}">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name}_motor">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>
  <xacro:macro name="fixed" params="name parent child xyz rpy">
    <joint name="${name}" type="fixed">
      <parent link="${parent}"/>
      <child link="${child}"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>
  </xacro:macro>

  <!-- link -->
  <xacro:macro name="base" params="name parent xyz rpy">
    <link name="${name}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="${base_height}" radius="${base_radius}"/>
        </geometry>
        <material name="yellow">
          <color rgba="1 0.4 0 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${base_height}" radius="${base_radius}"/>
        </geometry>
      </collision>
      <cylinder_inertial
              radius="${base_radius}"
              length="${base_height}"
              mass="${base_mass}"
      />
    </link>
    <fixed
            name="${name}_joint"
            parent="${parent}"
            child="${name}"
            xyz="${xyz}"
            rpy="${rpy}"
    />
    <gazebo reference="${name}">
      <material>Gazebo/Yellow</material>
    </gazebo>
  </xacro:macro>
  <xacro:macro name="motor" params="name parent xyz rpy">
    <link name="${name}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="${motor_height}" radius="${motor_radius}"/>
        </geometry>
        <material name="gray">
          <color rgba="0.75 0.75 0.75 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${motor_height}" radius="${motor_radius}"/>
        </geometry>
      </collision>
      <cylinder_inertial
              radius="${motor_radius}"
              length="${motor_height}"
              mass="${motor_mass}"
      />
    </link>
    <continuous
            name="${name}_joint"
            parent="${parent}"
            child="${name}"
            xyz="${xyz}"
            rpy="${rpy}"
            axis="0 0 1"
    />
    <gazebo reference="${name}">
      <material>Gazebo/Gray</material>
    </gazebo>
  </xacro:macro>
  <xacro:macro name="pole" params="name parent length xyz rpy">
    <link name="${name}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder length="${length}" radius="${pole_radius}"/>
        </geometry>
        <material name="white">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${length}" radius="${pole_radius}"/>
        </geometry>
      </collision>
      <cylinder_inertial
              radius="${pole_radius}"
              length="${pole_length}"
              mass="${pole_mass}"
      />
    </link>
    <fixed
            name="${name}_joint"
            parent="${parent}"
            child="${name}"
            xyz="${xyz}"
            rpy="${rpy}"
    />
    <gazebo reference="${name}">
      <material>Gazebo/White</material>
    </gazebo>
  </xacro:macro>

</robot>
